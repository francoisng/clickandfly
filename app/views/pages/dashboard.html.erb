<div class="container">
  <h1>Hello, <%=@user.email%> ðŸ˜Š</h1> 
  <br>
  <h2>My bookings</h2>
  <div class="cards">
    <% @user.bookings.each do |booking| %>
      <div class="card-product">
      <% if booking.airplane.photos.first %>
        <%= cl_image_tag booking.airplane.photos.first.key, crop: :fill %>
      <% end %>
        <div class="card-product-infos">
          <h2><%= booking.airplane.model %></h2>
            <p>From <%= booking.start_date %> to <%= booking.end_date %> (<%= (booking.end_date - booking.start_date).to_i %> days)</p>

            <p>Total price: <%= number = number_with_precision(booking.airplane.daily_price * (booking.end_date - booking.start_date).to_i, precision: 0, delimiter: ' ') %> â‚¬</p>
             <!--<p>Total price: <%= number_with_precision(number, :precision => 2, :delimiter => ' ')%> â‚¬</p> -->

            <%= link_to  edit_booking_path(booking) do %>
              <i class="fas fa-pencil-alt"></i> Modify your Booking
            <% end %>
            <br>
            <%= link_to  booking_path(booking), method: :delete, data: { confirm: "Are you sure ?"}  do%>
              <i class="fas fa-trash"></i> Delete your Booking
            <% end %>

        </div>
      </div>
    <% end %>
  </div>
  <hr>
  <h2>My planes</h2>
    <% @user.airplanes.each do |airplane| %>
      <% if @user.airplanes.empty? %>
        <p>You have no planes yet</p>
      <% else %>
      <ul>
        <strong><%= airplane.model %></strong>
        <br>
        <%= link_to "+ Modify this plane", edit_airplane_path(airplane) %>
        <br>
        <%= link_to "- Delete this plane", airplane_path(airplane), method: :delete, data: { confirm: "Are you sure ?"} %>
      </ul>
      <% end %>
    <% end %>
</div>