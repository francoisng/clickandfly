

<div class="container">
   <h1><%= @airplane.model%></h1>
      <% @airplane.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>

<div class="booking">
    <div class="airplane-infos">
      <p><strong>> Category of the airplane:</strong> <%= @airplane.category %></p>
      <p><strong>> Range:</strong> <%= @airplane.range%> km </p>
      <p><strong>> Capacity : </strong><%= @airplane.seat_capacity %> people</p>
      <p><strong>> Location : </strong><%= @airplane.address %></p>
      <p><strong>> Price for a day: </strong><%= @airplane.daily_price %> euros</p>
   </div>
   <div class="booking-form row">
      <!-- <div class="col-md-8">
      <div class= "border border-secondary" >
      <div class= "rounded" > -->

        <%= simple_form_for [@airplane, @booking] do |f| %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.button :submit, class: 'btn btn-primary' %>
          <% end %>
