

<div class="container">
   <h1 class="border border-secondary" class= "rounded"><%= @airplane.model%></h1>
      <% @airplane.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
      <p><strong>> Model of the airplane:</strong> <%= @airplane.model %></p>
      <p><strong>> Category of the airplane:</strong> <%= @airplane.category %></p>
      <p><strong>> Range:</strong> <%= @airplane.range%> km </p>
      <p><strong>> Capacity : </strong><%= @airplane.seat_capacity %> people</p>
      <p><strong>> Location : </strong><%= @airplane.address %></p>
      <p><strong>> Price for a day: </strong><%= @airplane.daily_price %> euros</p>

    <div class="row justify-content-center">
      <div class="col-md-8">
        <h1 style="text-align: center;">Book your plane</h1>
        <%= simple_form_for [@airplane, @booking] do |f| %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.button :submit, class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>




