<div class="container container-show">
  <div class= "one ">
       <% @airplane.photos.each do |photo| %>
       <div> <%= cl_image_tag photo.key, height: 250, width: 350, crop: :fill, class: "imageshow" %> </div>
       <% end %>
  </div>

  <div class="description-booking">
    <div class="airplane-infos ml-10">
      <h1><strong><%= @airplane.model%></strong></h1>
      <p></p><strong> Category:</strong> <%= @airplane.category %></p>
      <p><strong> Range:</strong> <%= @airplane.range%> km </p>
      <p></p><strong> Capacity : </strong><%= @airplane.seat_capacity %> people</p>
      <p><strong> Location : </strong><%= @airplane.address %></p>
      <p></p><%= @airplane.daily_price%> euros/day</p>
   </div>

   <div class="booking-form">
      <%= simple_form_for [@airplane, @booking] do |f| %>
         <strong> <%= f.input :start_date %> </strong>
          <strong>  <%= f.input :end_date %> </strong>
           <strong> <%= f.button :submit, class: 'btn btn-dark' %> </strong>
        <% end %>
    </div>
  </div>

  <div>
    <h1 class="Location"><strong>Location</strong></h1>
  </div>
</div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>