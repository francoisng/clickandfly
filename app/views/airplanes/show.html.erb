

<div class="container">
   <h1 class="border border-secondary" class= "rounded"><%= @airplane.model%></h1>
      <% @airplane.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
      <p><strong>> Propriétaire du jet:</strong> <%= @airplane.user_id %></p>
      <p><strong>> Modèle du jet:</strong> <%= @airplane.model %></p>
      <p><strong>> Catégorie du jet:</strong> <%= @airplane.category %></p>
      <p><strong>> Distance:</strong> <%= @airplane.range %></p>
      <p><strong>> Capacité :</strong><%= @airplane.seat_capacity %></p>
      <p><strong>> Localisation :</strong><%= @airplane.address %></p>
      <p><strong>> Prix à la journée: </strong><%= @airplane.daily_price %></p>

    <div class="row justify-content-center">
      <div class="col-md-8">
        <h1 style="text-align: center;">Book your plane</h1>
        <%= simple_form_for [@airplane, @booking] do |f| %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.button :submit, class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>


  <%= link_to "Retourner à la Liste des jets", airplanes_path, class: "btn btn-primary" %>


