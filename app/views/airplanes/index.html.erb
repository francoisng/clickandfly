<div class="container">
  <%= form_tag airplanes_path, method: :get do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a jet"
  %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %> 
  <h1 class="border border-secondary" >Private jets available around the world</h1>
  <div class="row justify-content-between">
    <% @airplanes.each do |airplane| %>
      <div class="card mt-2" style="width: 22rem;">
        <%= link_to airplane_path(airplane) do %>
          <% if airplane.photos.first %>
            <%= cl_image_tag airplane.photos.first.key, crop: :fill, id: 'photo' %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= airplane.model %></h5>
            <p class="card-text">Location: <%= airplane.address %></p>
            <p class="card-text">Daily price: â‚¬<%= airplane.daily_price %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
